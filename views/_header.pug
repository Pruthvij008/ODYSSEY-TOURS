header.header
  nav.nav.nav--tours
    //- .header__logo
    //-   img(src='/img/arrow2.png' alt='odyssey logo' style='width: 70px; height: auto;')
    a.nav__el(href='/') Odyssey Tours
  nav.nav.nav--user
    if user
      a.nav__el(href='/') All Tours
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]    
    else
      a.nav__el(href='/alltours') All Tours
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign up
